{
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2017",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "strict": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}
